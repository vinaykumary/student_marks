<h3>Mark Analysis</h3>
<table>
  <tr>
    <th>Exam Name:</th>
    <td><%= @exam.name %><td>
  </tr>
  <tr>
    <th>Department:</th>
    <td><%= @department.name %><td>
  </tr>
  <tr>
    <th>Semester:</th>
    <td><%= @semester %><td>
  </tr>
  <tr>
    <th>Exam Date:</th>
    <td><%= @exam.date.to_date %><td>
  </tr>
</table>

<h5>Menu:</h5>
<ul>
  <li>Mark List:&nbsp;&nbsp;<%=link_to "Section A", :action=>'mark_list', :id=>@exam.id,:section=>"A"%>&nbsp;&nbsp;<%=link_to "Section B", :action=>'mark_list', :id=>@exam.id,:section=>"B"%></li>
  <li>Failures List
    <ul>
      <li>Individual Subject Failures<br>
          <form action="/analysis/indiv_sub_fail">
          <table>
            <tr>
              <td>Select Subject:</td>
              <td><%= select_tag :sub,options_from_collection_for_select(@subjects, :id, :name) %></td>
              <%= hidden_field_tag :id,@exam.id %>
              <td><input type="submit" value="View" /></td>
              </tr>
          </table>
          </form>
      </li>

      <li><%=link_to "List by No. of Subjects Failed", :action=>'no_sub_fail',:id=>@exam.id %></li>
      <li><%=link_to "Failures Summary", :action=>'fail_summary',:id=>@exam.id %></li>
    </ul>
  </li>
  <li><%=link_to "Result Analysis", :action=>'result_analysis',:id=>@exam.id %></li>
</ul>
