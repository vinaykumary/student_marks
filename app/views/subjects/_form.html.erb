<table summary="Subject form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Subject Code</th>
        <td><%= f.text_field(:subject_code) %></td>
      </tr>
      <tr>
        <th>Credits</th>
        <td><%= f.text_field(:credits) %></td>
      </tr>
      <tr>
        <th>Department</th>
        <td><%= collection_select(:subject, :department_id, Department.all, :id, :name) %></td>
      </tr>
      <tr>
        <th>Semester</th>
        <td><%= f.text_field(:semester) %> </td>
      <tr>
      <tr>
        <th>Abbreviation</th>
        <td><%= f.text_field(:abbreviation) %></td>
      <tr>
    </table>
